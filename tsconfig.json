{
    "compilerOptions": {
        // source code location
        "rootDir": "./src",

        // transpiled code location
        "outDir": "./dist",


        "noImplicitAny": true,
        "target": "es5",

        // allow mix ts/js
        "allowJs": true,
        "checkJs": false
    },

    // 
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}